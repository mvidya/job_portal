<h1>Hi,Welcome to Job_type profile</h1>
<% if flash[:error] %>
<div class="error"><%= flash[:error] %> </div>
<% end %>
<%= form_for @job_type do |f| %>
<table>
	
	<tr>
		<td> Name </td>
		<td><%= f.text_field :type_name %></td>
	</tr>
	<tr>
		<td> Description </td>
		<td><%= f.text_area :type_description %></td>
	</tr>
</table>
<%= f.submit "submit" %>
<% end %>

<style>
	h1 {
		color: purple;
		text-align: center;
		background-color: yellow;
	}
	.error{
		color: #ff0000;
	}	
</style>