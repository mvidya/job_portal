<h1>Showing Jobs details</h1>

<% if is_employer? %>
<span style="float:right"><%= link_to "New", new_job_path %></span>
<% end %>

<table width="100%">
	<tr>
		<th>Company Name</th>
		<th>Job Type</th>
		<th>Posted On</th>
		<th>Expires On</th>
		<th>Salary</th>
		<th>Functional Area</th>
		<th>Experience</th>
		<% unless is_employee? %>
		<th>No. of People Applied</th>
		<% end %>
		<th>Actions</th>
	</tr>

	<% if @jobs.empty? %>
	<tr>
		<td colspan="9" style="text-align:center; font-weight:bold">
			No Jobs Found
		</td>
	</tr>
	
	<% else %>
	<% @jobs.each do |j| %>
	<tr>
		<td><%= j.employer.company_name %></td>
		<td><%= j.job_type.type_name %></td>
		<td><%= j.job_posted_on %></td>
		<td><%= j.job_expires_on %></td>
		<td><%= j.salary %></td>
		<td><%= j.functional_area %></td>
		<td><%= j.experience %></td>
		<% unless is_employee? %>
		<td><%= j.applied_jobs.count %></td>
		<% end %>
		<td>

			<%= link_to "Show", job_path(j) %>
			<% unless is_employee? %>
			<% unless is_admin? %>
			<%= link_to "Edit", edit_job_path(j) %>
			<% end %>
			<%= link_to "Delete", job_path(j), method: :delete, data: { confirm: 'Are you sure?' } %>
			<%= link_to "Applied", applied_jobs_job_path(j) %>
			<% end %>
		</td>
		
	</tr>
	<% end %>
	<% end %>
</table>

<style>
	table, tr, th, td {
		border: 1px solid black;
	}
	h5{
		color:#3ABf00;
	}
</style>