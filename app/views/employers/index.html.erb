<h1>Showing employers details</h1>
<table width="100%">
	<tr>
		<th>Company Name</th>
		<th>Website Url</th>
		<th>City</th>
		<th>Contact Person</th>
		<th>Contact Number</th>
		<th>Contact Email</th>
		<th>Actions</th>
	</tr>
	<% @employers.each do |e| %>
	<tr>
		<td><%= e.company_name %></td>
		<td><%= e.website_url %></td>
		<td><%= e.city %></td>
		<td><%= e.contact_person %></td>
		<td><%= e.contact_number %></td>
		<td><%= e.contact_email %></td>
		<td><%= link_to "Delete", employer_path(e), method: :delete, data: { confirm: "Are you sure!" } %>
		<%= link_to "Update", edit_employer_path(e) %>
		<%= link_to "Show", employer_path(e) %></td>
	</tr>
	<% end %>
</table>

<style>
	table, tr, th, td {
		border: 1px solid black;
	} 
	.notice{
	color:#3ABf00;
}
</style>