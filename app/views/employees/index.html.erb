<h1>Showing Employee details</h1>
<table width="100%">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Phone Number</th>
		<th>City</th>
		<th>Qualification</th>
		<th>Percentage</th>
		<th>Action</th>
	</tr>
	<% @employees.each do |e| %>
	<tr>
		<td>
		<%= e.Fname %>
		<%= e.Lname %>
		</td>
		<td><%= e.email %></td>
		<td><%= e.ph_number %></td>
		<td><%= e.city %></td>
		<td><%= e.qualification %></td>
		<td><%= e.percentage %></td>
	
		<td>
		<%= link_to "Edit", edit_employee_path(e) %>
		<%= link_to "Show", employee_path(e) %>
		<%= link_to "Delete", employee_path(e), method: :delete, data: { confirm: "Are you sure!" } %>
		</td>
	</tr>
	<% end %>
</table>

<style>
	table, tr, th, td {
		border: 1px solid black;
	} 
	.notice{
	color:#3ABf00;
}
</style>