<h1>Listing Roles</h1>

<span style="float:right"><%= link_to 'New Role', new_role_path %></span>

<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= role.description %></td>
      <td><%= link_to 'Show', role %>
        <%= link_to 'Edit', edit_role_path(role) %>
        <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <style>
    table, tr, th, td {
      border: 1px solid black;
    } 
  </style>

  